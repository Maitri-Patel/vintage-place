<!-- app/views/profiles/edit.html.erb -->

<h2>Edit Profile</h2>

<%= form_with(model: @user, url: profile_path, local: true, method: :put) do |form| %>
  <div class="field">
    <%= form.label :username %><br>
    <%= form.text_field :username %>
  </div>

  <div class="field">
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>

  <div class="field">
    <%= form.label :address_line1 %><br>
    <%= form.text_field :address_line1 %>
  </div>

  <div class="field">
    <%= form.label :city %><br>
    <%= form.text_field :city %>
  </div>

  <div class="field">
    <%= form.label :province_id %><br>
    <%= form.collection_select :province_id, Province.all, :id, :name, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :postal_code %><br>
    <%= form.text_field :postal_code %>
  </div>

  <div class="actions">
    <%= form_with(model: @user, url: profile_path, local: true) do |form| %>
  <div class="actions">
    <%= form.submit "Update Profile" %>
  </div>
<% end %>
  </div>
<% end %>

<%= link_to 'Back to Profile', profile_path, class: 'btn btn-secondary' %>

