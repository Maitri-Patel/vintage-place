<!-- app/views/profiles/show.html.erb -->
<div class="container mt-4 mb-4">
  <h2 class="mb-3">Profile Information</h2>

  <div class="bg-white p-4 border rounded-3">
    <p class="fs-5"><strong>Name:</strong> <%= @user.username %></p>
    <p class="fs-5"><strong>Email:</strong> <%= @user.email %></p>
    <p class="fs-5"><strong>Address:</strong> <%= @user.address_line1 %></p>
    <p class="fs-5"><strong>City:</strong> <%= @user.city %></p>
    <p class="fs-5"><strong>Province:</strong> <%= @user.province.name %></p>
    <p class="fs-5"><strong>Postal Code:</strong> <%= @user.postal_code %></p>
  </div>

  <div class="mt-3">
    <%= link_to 'Edit Profile', edit_profile_path, class: 'btn btn-primary me-2' %>
    <%= link_to 'My Past Orders', orders_path, class: 'btn btn-primary' %>
  </div>
</div>
