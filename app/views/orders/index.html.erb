<!-- app/views/orders/index.html.erb -->
<h1>Your Past Orders</h1>

<table>
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Date</th>
      <th>Total</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= order.created_at.strftime("%d %B %Y") %></td>
        <td>$<%= order.total_price %></td>
        <td><%= link_to 'View', order_path(order) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
