<!-- app/views/layouts/application.html.erb -->
<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbo-track': 'reload' %>
  <%= javascript_importmap_tags %>
  
  <!-- Include Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
  <!-- Include Bootstrap Icons if you plan to use icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>

<body>
<nav class="navbar navbar-expand navbar-light bg-light">
  <div class="container">
    <%= link_to root_path, class: 'navbar-brand' do %>
      <%= image_tag('logo.png', alt: 'Vintage Place logo', width: 50, height: 50) %>
    <% end %>
    <%= link_to 'About', about_path %> 
    <%= link_to 'Contact', contact_path %>
    <% if @q %>
    <%= search_form_for @q, url: products_path, method: :get do |f| %>
      <div >
        <%= f.label :category_id_eq, "Category" %>
        <%= f.select :category_id_eq, Category.all.collect {|c| [c.name, c.id]}, include_blank: 'All Categories', class: 'form-control mr-2' %>
        
        <%= f.label :name_or_description_cont, "Search" %>
        <%= f.search_field :name_or_description_cont, class: %>
        
        <%= f.submit "Search", class: 'btn btn-primary' %>

      </div>
      <% end %>
    <% end %>

  
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to 'Cart', cart_path, class: "nav-link" %>
      </li>
      <% if user_signed_in? %>
  <li class="nav-item">
    <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, class: 'nav-link' %>
  </li>
<% else %>
  <li class="nav-item">
    <%= link_to 'Login', new_user_session_path, class: 'nav-link' %>
  </li>
  <li class="nav-item">
    <%= link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
  </li>
<% end %>

<% if user_signed_in? %>
  <%= link_to 'Profile', profile_path %>
<% end %>
      
    </ul>
  </div>
</nav>

 <% flash.each do |key, message| %>
    <div class="<%= key %>"><%= message %></div>
  <% end %>

<%= yield %>
<!-- Include Bootstrap JS -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
</body>
</html>
