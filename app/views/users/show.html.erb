<!-- app/views/users/show.html.erb -->
<div class="container my-5">
  <%= form_with(model: @user, local: true, class: "needs-validation", novalidate: true) do |form| %>
    <div class="mb-3">
      <%= form.label :address_line1, class: 'form-label' %>
      <%= form.text_field :address_line1, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :address_line2, class: 'form-label' %>
      <%= form.text_field :address_line2, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :city, class: 'form-label' %>
      <%= form.text_field :city, class: 'form-control', required: true %>
    </div>

    <div class="mb-3">
      <%= form.label :province_id, class: 'form-label' %>
      <%= form.collection_select :province_id, Province.all, :id, :name, { include_blank: 'Select Province' }, { class: 'form-select', required: true } %>
    </div>

    <div class="mb-3">
      <%= form.label :postal_code, class: 'form-label' %>
      <%= form.text_field :postal_code, class: 'form-control', required: true, pattern: "\\d{5}(-\\d{4})?" %>
      <div class="invalid-feedback">
        Please enter a valid postal code.
      </div>
    </div>

    <%= form.submit "Update Profile", class: "btn btn-primary" %>
  <% end %>
</div>
