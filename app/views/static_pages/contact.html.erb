<!-- app/views/static_pages/contact.html.erb -->
<div class="container mt-5 mb-5">
  <% if @content %>
    <div class="card">
      <div class="card-body">
        <h1 class="card-title mb-4"><%= @content.title %></h1>
        <div class="card-text"><%= simple_format(@content.content) %></div>
      </div>
    </div>
  <% else %>
    <p>Contact page content not found.</p>
  <% end %>
</div>