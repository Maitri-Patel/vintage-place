<!-- app/views/products/index.html.erb -->
<h2>Available Products </h2>

<div class="products">
  <% @products.each do |product| %>
    <div class="product">
      <h2><%= product.name %></h2>
      <p><%= product.description %></p>
      <p>Price: $<%= product.price %></p>
      <!-- Add more product details as desired -->
    </div>
  <% end %>
</div>
